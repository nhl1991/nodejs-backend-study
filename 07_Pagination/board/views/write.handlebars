<h1>[{{title}}] 글 {{#if (eq mode "create")}}작성{{else}}수정{{/if}}</h1>

<div>
    <!-- 글 쓰기 폼 -->
    <form name="boardForm" method="post" {{#if (eq mode "create")}}action="/write"{{else}}action="/modify"{{/if}}>
        {{!-- 제목 --}}
        {{#if (eq mode "modify")}}
        <input type="hiddne" name="id" value="{{post._id}}" />
        {{/if}}
        <div>
            <label>제목</label>
            <input type="text" name="title" placeholder="제목을 넣어주세요" value="{{post.title}}" />
        </div>
        {{!-- 이름 --}}
        <div>
            <label>이름</label>
            <input type="text" name="name" placeholder="이름을 넣어주세요" value="{{post.writer}}" />
        </div>
        {{!-- 비밀번호 --}}
        <div>
            <label>비밀번호</label>
            <input type="text" name="password" placeholder="비밀번호를 넣어주세요" />
        </div>
        {{!-- 본문 --}}
        <div>
            <label>본문</label>
            <textarea placeholder="본문을 입력하세요" name="content" cols="50" rows="10">
                {{post.content}}
            </textarea>
            <br />
        </div>
        {{!-- 버튼 영역 --}}
        <div>
            <button type="submit">저장</button>
            <button type="button" onclick="location.href='/'">취소</button>
        </div>
    </form>

</div>